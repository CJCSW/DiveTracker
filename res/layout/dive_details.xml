<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  	<include layout="@layout/header" />
    
	<!-- GPS Map --> 
	<com.google.android.maps.MapView
		android:id="@+id/dive_map"
		android:layout_width="fill_parent"
		android:layout_height="120dp"
		android:enabled="true"
		android:apiKey="@string/maps_key"
	/> 

	<!-- Date and Time -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            style="@style/details_text"
            android:id="@+id/dive_details_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            />
        <TextView 
            style="@style/details_text"
            android:id="@+id/dive_details_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            />
     </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            style="@style/details_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/dive_depth"
         />
        <TextView
            style="@style/details_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/dive_duration"
         />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            style="@style/details_label"
            android:id="@+id/dive_details_maxDeep"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="0.5"
         />
        <TextView
            style="@style/details_label"
            android:id="@+id/dive_details_duration"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="0.5"
         />
    </LinearLayout>
</LinearLayout>
