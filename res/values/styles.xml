<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="main_bg_color">#66c0ec</color>
    <color name="main_tx_color">#ffffff</color>
    <style name="header">
        <item name="android:background">@color/main_bg_color</item>
    </style>
    <style name="headerText">
        <item name="android:textColor">@color/main_tx_color</item>
        <item name="android:gravity">center_vertical</item> <!-- CENTER_VERTICAL -->
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="EmptyLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <!-- SHADOW -->
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
    </style>
</resources>